<div class="container">
        <div class="row">
            <div class="col-lg-4">
                <h1>Burger To Eat</h1>

                <ul>
                    {{#each burger}} 
                    {{#unless this.devoured}}
                    <li>
                        <p>
                            {{this.id}}. {{this.burger_name}}

                            <button data-burgerid="{{this.id}}" class="devoBurger">devoured</button>
                        </p>
                    </li>
                    {{/unless}}
                     {{/each}}
                </ul>
            </div>
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <h1>devoured Burger </h1>
                
                <ul>
                    {{#each burger}} 
                    {{#if this.devoured}}
                    <li>
                        <p>
                            {{this.id}}. {{this.burger_name}}
                        </p>
                    </li>
                   {{/if}} 
                   {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <h2>Add a Burger </h2>
                <form id="addBurger" class="button-size">
                    <textarea type="text" name="burgers"></textarea>
                    <button id="submit" type="submit">Save Burger!</button>
                </form>
            </div>
        </div>
    </div>
    

